{% extends 'base.html.twig' %}

{% block title %}Register Student{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 p-5">
    <div class="max-w-md mx-auto bg-white p-8 rounded shadow">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Add New Student</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.name, 'Student Name', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <button type="submit" class="bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
                Register Student
            </button>
        {{ form_end(form) }}
        
        <div class="mt-4 text-center">
            <a href="{{ path('app_tenant_home') }}" class="text-gray-500 hover:underline">Back to Dashboard</a>
        </div>
    </div>
</div>
{% endblock %}