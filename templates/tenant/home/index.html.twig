{% extends 'base.html.twig' %}

{% block title %}School Home{% endblock %}

{% block body %}
<div class="container mx-auto mt-20 text-center">
    <h1 class="text-4xl font-bold text-blue-600 mb-4">Welcome to Your School Portal</h1>
    <p class="text-xl text-gray-600">
        We are connected to your custom database.
    </p>
    
    <div class="mt-8 p-6 bg-gray-100 inline-block rounded-lg shadow">
        <span class="text-2xl font-bold text-gray-800">{{ student_count }}</span>
